{
  "name": "darius-pizza-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\" \"tests/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "eslint src tests",
    "prepare": "husky",
    "changelog": "node -e \"console.log('changelog generation is disabled in this template');\"",
    "changelog:first": "node -e \"console.log('changelog generation is disabled in this template');\"",
    "version": "node -e \"console.log('version script placeholder');\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "node -e \"process.exit(process.env.CI?0:1)\" || playwright test",
    "test:e2e:safari": "node -e \"process.exit(process.env.CI?0:1)\" || cross-env E2E_ALL_BROWSERS=0 playwright test",
    "test:e2e:all": "node -e \"process.exit(process.env.CI?0:1)\" || cross-env E2E_ALL_BROWSERS=1 playwright test",
    "test:e2e:ui": "node -e \"process.exit(process.env.CI?0:1)\" || playwright test --ui",
    "test:e2e:headed": "node -e \"process.exit(process.env.CI?0:1)\" || playwright test --headed",
    "test:e2e:debug": "node -e \"process.exit(process.env.CI?0:1)\" || playwright test --debug",
    "security:audit": "npm audit",
    "security:audit:ci": "audit-ci --high",
    "security:check": "npm audit --audit-level=high && npm run security:audit:ci",
    "type-check": "tsc --noEmit",
    "quality:check": "npm run lint && npm run type-check && npm run test && npm run security:check",
    "analyze": "cross-env ANALYZE=true BUNDLE_ANALYZE=browser npm run build",
    "analyze:server": "cross-env ANALYZE=true BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env ANALYZE=true BUNDLE_ANALYZE=browser npm run build",
    "lighthouse:collect": "node -e \"console.log('lighthouse disabled in template');\"",
    "lighthouse:assert": "node -e \"console.log('lighthouse disabled in template');\"",
    "lighthouse": "node -e \"console.log('lighthouse disabled in template');\"",
    "fix": "eslint --fix src tests && npm run format"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/pacer": "^0.15.4",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cmdk": "1.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.24",
    "next": "15.5.3",
    "next-intl": "^4.3.12",
    "next-themes": "0.4.6",
    "react": "19.1.1",
    "react-country-flag": "^3.1.0",
    "react-dom": "19.1.1",
    "react-hook-form": "^7.65.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "zod": "^4.1.12",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.21",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "overrides": {
    "inquirer": "^9.2.20",
    "external-editor": "^3.1.0",
    "tmp": "^0.2.3",
    "git-raw-commits": "^4.0.0",
    "git-semver-tags": "^7.0.1",
    "conventional-changelog": "^6.0.0",
    "conventional-changelog-core": "^7.0.0",
    "@conventional-changelog/git-client": "^1.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
